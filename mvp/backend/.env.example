# Database Configuration
DATABASE_URL=sqlite:///./chatbot.db

# Security
# Generate a strong secret key: python3 -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-change-in-production-min-32-chars

# Server Configuration
HOST=127.0.0.1
PORT=8000
DEBUG=True

# CORS Origins (comma-separated list or JSON array format)
# For development: ["http://localhost:3000","http://localhost:5173"]
# For production: ["http://YOUR_STATIC_IP","http://YOUR_STATIC_IP/voice-assistant"]
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173"]

# OpenAI API Configuration
OPENAI_API_BASE=https://api.openai.com/v1
